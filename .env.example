# ===========================================
# Enterprise AI Code Review Platform
# Environment Configuration
# ===========================================

# -----------------------------
# Database Configuration
# -----------------------------
MONGODB_URI=mongodb://admin:password@localhost:27017/code_review_bot?authSource=admin
MONGODB_DB_NAME=code_review_bot

# -----------------------------
# Redis Configuration
# -----------------------------
REDIS_URL=redis://localhost:6379
REDIS_TLS=false

# -----------------------------
# GitHub App Configuration
# -----------------------------
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_APP_WEBHOOK_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------
# AI Model Configuration (OpenRouter)
# -----------------------------
AI_PROVIDER=openrouter
AI_BASE_URL=https://openrouter.ai/api/v1
AI_API_KEY=
AI_MODEL_TIER1=openai/gpt-3.5-turbo
AI_MODEL_TIER2=openai/gpt-4-turbo
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.3

# -----------------------------
# Application Configuration
# -----------------------------
NODE_ENV=development
API_PORT=3001
API_HOST=0.0.0.0
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# CORS - Comma-separated list of allowed origins
# Default: localhost:3000 (web), localhost:3001 (api), localhost:8000 (worker)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000

# -----------------------------
# Security Configuration
# -----------------------------
JWT_SECRET=
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=

# -----------------------------
# Rate Limiting
# -----------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------
# Analysis Configuration
# -----------------------------
MAX_PR_FILES=100
MAX_PR_LINES=5000
MAX_COMMENTS_PER_PR=10
SHADOW_MODE_DEFAULT=true
